[ { Name:'contentId', DefaultValue:'cmd(qs name:cid)', Description:'内容Id，一般取自query string，可输入：cmd(qs name:cid)。' }
]
/Parameters>*@
@using DAF.Core;
@using DAF.Web;
@using DAF.CMS;
@using DAF.CMS.Models;
@{
    Dictionary<string, string> paras = CmsHelper.GetControlParas(Page.Paras);
    Content obj = CmsHelper.GetContent(paras["contentId"]);
}
<article id="@obj.ContentId" class="content-brief">
    <h3 class="content-title">@obj.Title</h3>
    <section class="content-info"></section>
    <section class="content-body">@Html.Raw(obj.HtmlBody)</section>
</article>
