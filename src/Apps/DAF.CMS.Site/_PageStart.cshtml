@using DAF.Core;
@{
    Layout = "~/_Window.cshtml";
    var resName = Request.Path.TrimStart('/');
    if(!string.IsNullOrEmpty(Request.CurrentExecutionFilePathExtension))
    {
        resName = resName.Replace(Request.CurrentExecutionFilePathExtension, "");
    }
    resName = resName.Replace("/", "_");
    Page.Title = LocaleHelper.Localizer.Get(resName, "DAF.CMS.Site");
}