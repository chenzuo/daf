@using DAF.Core;
@using DAF.Web;
@using DAF.CMS;
@{
    Dictionary<string, string> paras = CmsHelper.GetControlParas(Page.Paras);
    var menu = paras["menu"];
    var menuItems = CmsHelper.GetMenuItems(menu);
}
<nav>
    <ul>
        @foreach (var mi in menuItems)
        {
            <li><a href="@mi.LinkUrl" target="@mi.Target">@mi.Caption</a></li>
        }
    </ul>
</nav>
